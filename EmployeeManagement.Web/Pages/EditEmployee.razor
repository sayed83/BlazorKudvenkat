@page "/editemployee/{id}"
@inherits EditEmployeeBase

    <EditForm Model="@Employee">
        <h3>Edit Employee</h3>
        <hr />
        <div class="form-group row">
            <label for="firstname" class="col-sm-2 col-form-label">
                First Name
            </label>
            <div class="col-sm-10">
                <InputText id="firstname" class="form-control" @bind-Value="Employee.FirstName" placeholder="First Name">
                </InputText>
            </div>
        </div>
        <div class="form-group row">
            <label for="lastname" class="col-sm-2 col-form-label">
                Last Name
            </label>
            <div class="col-sm-10">
                <InputText id="lastname" class="form-control" @bind-Value="Employee.LastName" placeholder="Last Name">
                </InputText>
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">
                First Name
            </label>
            <div class="col-sm-10">
                <InputText id="email" class="form-control" @bind-Value="Employee.Email" placeholder="email@email.com">
                </InputText>
            </div>
        </div>
        <div class="form-group row">
            <label for="department" class="col-sm-2 col-form-label">
                Department
            </label>
            <div class="col-sm-10">
                <InputSelect id="department" @bind-Value="DepartmentId" class="form-control">
                    @foreach (var dept in Departments)
                    {
                        <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                    }
                </InputSelect>
            </div>
        </div>
    </EditForm>